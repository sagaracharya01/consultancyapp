<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitForm">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_margin="7dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">
        <TextView

            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textSize="30dp"
            android:id="@+id/formid"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FORM"/>
        <TextView
            android:layout_below="@+id/formid"
            android:id="@+id/txtname"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="18dp"/>
        <EditText
            android:inputType="textPersonName"
            android:textSize="18dp"

            android:layout_below="@+id/formid"
            android:id="@+id/edtname"
            android:layout_toRightOf="@+id/txtname"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtname"
            android:id="@+id/txtaddress"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="18dp"/>
        <EditText
            android:inputType="textPersonName"
            android:textSize="18dp"

            android:layout_marginLeft="10dp"
            android:id="@+id/edtaddress"
            android:layout_below="@+id/txtname"
            android:layout_toRightOf="@+id/txtname"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtaddress"
            android:id="@+id/txtemail"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18dp"/>
        <EditText
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:id="@+id/edtemail"
            android:layout_below="@+id/txtaddress"
            android:layout_toRightOf="@+id/txtname"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtemail"
            android:id="@+id/txtphone"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textSize="18dp"/>
        <EditText
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:id="@+id/edtphone"
            android:layout_below="@+id/txtemail"
            android:layout_toRightOf="@+id/txtname"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtphone"
            android:id="@+id/txtgender"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textSize="18dp"/>
        <EditText
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/edtgender"
            android:layout_below="@+id/txtphone"
            android:layout_toRightOf="@+id/txtname"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtgender"
            android:id="@+id/txteducation"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="Education:"
            android:textSize="18dp"/>
        <EditText
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/edteducation"
            android:layout_below="@+id/txtgender"
            android:layout_toRightOf="@+id/txtname"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/txtnote"
            android:layout_below="@+id/txteducation"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose the consultancy to whom you want to submit"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtnote"
            android:id="@+id/txtselect"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultancy:"
            android:textSize="18dp"/>
        <EditText

            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/txtselect"
            android:id="@+id/edtconsult"
            android:layout_below="@+id/txtnote"
            android:layout_width="match_parent"
            android:layout_height="40dp"></EditText>


        <android.support.v7.widget.CardView
            android:id="@+id/submit"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/edtconsult"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>







    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>