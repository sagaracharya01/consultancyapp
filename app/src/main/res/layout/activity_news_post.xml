<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsPost"
    android:background="@drawable/backlogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:background="@android:color/white"
        android:alpha="0.7"
        >

        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/txtpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/txtconc"
            android:layout_marginTop="0dp"
            android:layout_below="@id/txtpost"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/black"
            android:text="Consultancy"
            android:textColor="@android:color/white"
            android:textAlignment="center"

            android:textSize="25dp"/>
        <EditText
            android:visibility="gone"

            android:layout_centerHorizontal="true"
            android:id="@+id/edituser"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:background="#11000000"
            android:ems="10"
            android:textColorHint="@android:color/black"
            android:hint="Name"
            android:inputType="textPersonName"
            android:layout_below="@+id/txtconc"
            android:layout_marginTop="35dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"

            />
        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/editsubject"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="#11000000"
            android:ems="10"

            android:textColorHint="@android:color/darker_gray"
            android:hint="Subject"
            android:inputType="textPersonName"
            android:layout_below="@+id/edituser"
            android:layout_marginTop="35dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/editdesc"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="#11000000"
            android:ems="10"
            android:textColorHint="@android:color/darker_gray"

            android:hint="Description"
            android:layout_below="@+id/editsubject"
            android:layout_marginTop="35dp"
            android:textColor="@android:color/black"

            />

        <Button
            android:id="@+id/btnpostdata"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editdesc"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_width="200dp"
            android:textStyle="bold"
            android:text="POST UPLOAD"

            android:layout_height="50dp" />



    </RelativeLayout>

</RelativeLayout>