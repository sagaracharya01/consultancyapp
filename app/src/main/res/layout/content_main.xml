<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:background="@drawable/backimage"
    tools:showIn="@layout/app_bar_main">

    //  ...............test.........
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--  .............News and Announcement.......   -->

    <android.support.v7.widget.CardView
        android:id="@+id/newsid"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:padding="20dp"
        android:layout_margin="7dp"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/news"
            android:alpha="1"
            >
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/black"
                android:alpha="0.4">
                <TextView
                    android:layout_marginTop="10dp"
                    android:alpha="1"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/news"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!--      ...........Consultancylist............     -->

    <android.support.v7.widget.CardView
        android:id="@+id/consultid"
        android:layout_below="@+id/newsid"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:padding="20dp"
        android:layout_margin="7dp"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/consultancy"
            android:alpha="1"
            >
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/black"
                android:alpha="0.4">
                <TextView
                    android:layout_marginTop="10dp"
                    android:alpha="1"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consultancies"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

   <!--          .........user view........          -->

    <android.support.v7.widget.CardView
        android:id="@+id/userviewid"
        android:layout_below="@+id/consultid"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:padding="20dp"
        android:layout_margin="7dp"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/status"
            android:alpha="1"
            >
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/black"
                android:alpha="0.4">
                <TextView
                    android:layout_marginTop="10dp"
                    android:alpha="1"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Views and status"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>