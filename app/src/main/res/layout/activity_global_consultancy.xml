<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GlobalConsultancy">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:alpha="0.98"
                android:background="@drawable/globalback"/>
            <ImageView
                android:id="@+id/kingimg"
                android:background="@drawable/globalpf"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="120dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
            <TextView
                android:gravity="center"
                android:text="GlobalReach Institute"
                android:layout_marginTop="240dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/profile"
            app:cardCornerRadius="7dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/about"
                    android:padding="7dp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ABOUT"/>
                <TextView
                    android:id="@+id/aboutdetail"
                    android:layout_below="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The mission of Globalreach International is to show the right pathway to the students in the right country, the right university and the right program thereby helping students to pursue their dream career and to emerge their future. Also, we focus on helping students to explore their learning potentiality choosing the right educational destination to be successful and qualified personnel.Grace International has established in 2006 mainly with the objective to provide academic guidance for students who wants to acquire their higher education in countries like USA, UK, Australia, Canada and New Zealand and many more countries. Our fundamental service is to help students for selecting the right courses in the best universities by handing over plenty of study options."

                    />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:background="@drawable/abroad"
                    android:layout_below="@+id/aboutdetail"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_margin="8dp"
            android:layout_below="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtcomment"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Comments"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <RelativeLayout
                android:id="@+id/updown"
                android:layout_below="@+id/txtcomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView

                    android:layout_margin="5dp"
                    android:id="@+id/recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <EditText
                android:visibility="gone"
                android:id="@+id/hiddentext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/commenthere"
                android:layout_below="@+id/updown"
                android:layout_width="250dp"
                android:ems="10"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/commentbtn"
                android:layout_toRightOf="@+id/commenthere"
                android:layout_below="@+id/updown"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Post"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>